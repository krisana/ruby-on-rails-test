<div class="d-grid gap-2 d-md-flex align-items-center justify-content-md-between">
  <h1>Jobs</h1>
  <%= link_to "New Job", new_job_path, class: "btn btn-outline-success" %>
</div>
<div class="row">
  <div class="table-responsive">
    <table class="table caption-top">
      <caption>List of jobs</caption>
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Job title</th>
          <th scope="col">Company name</th>
          <th scope="col">Salary</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each_with_index do |job, index| %>
        <tr>
          <th scope="row"><%= index+1 %></th>
          <td><%= job.title %></td>
          <td><%= job.company %></td>
          <td><%= number_to_currency(job.salary, unit: "à¸¿", precision: 0) %></td>
          <td width="15%">
            <%= link_to "Show", job_path(job.id), class: "btn btn-outline-primary" %>
            <%= link_to "Edit", edit_job_path(job.id), class: "btn btn-outline-warning" %>
            <%= link_to "Del", job_path(job.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
          </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>